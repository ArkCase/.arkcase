<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-4.1.xsd">

    <bean id="foiaExtensionPrivileges" class="com.armedia.acm.pluginmanager.model.AcmPluginPrivileges">
        <property name="pluginName" value="FOIA Extension"/>
        <property name="privileges">
            <list>
                <ref bean="foiaFilePrivilege"/>
            </list>
        </property>
        <property name="urlPrivileges">
            <list>
                <bean id="postTags" class="com.armedia.acm.pluginmanager.model.AcmPluginUrlPrivilege">
                    <property name="httpMethod" value="POST"/>
                    <property name="url" value="/api/v1/service/ecm/file/{fileId}/tags"/>
                    <property name="requiredPrivilege" ref="foiaFilePrivilege"/>
                </bean>
                <bean id="getTags" class="com.armedia.acm.pluginmanager.model.AcmPluginUrlPrivilege">
                    <property name="httpMethod" value="GET"/>
                    <property name="url" value="/api/v1/service/ecm/file/{caseId}/tags"/>
                    <property name="requiredPrivilege" ref="foiaFilePrivilege"/>
                </bean>
                <bean id="foiaViews" class="com.armedia.acm.pluginmanager.model.AcmPluginUrlPrivilege">
                    <property name="httpMethod" value="GET"/>
                    <property name="url" value="/modules/queues/views/"/>
                    <property name="requiredPrivilege" ref="foiaFilePrivilege"/>
                </bean>
            </list>
        </property>
    </bean>
</beans>
